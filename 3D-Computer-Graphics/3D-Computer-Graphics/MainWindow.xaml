<Window x:Class="_3D_Computer_Graphics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3D_Computer_Graphics"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="750">
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="175"/>
        </Grid.ColumnDefinitions>
        
        <ListBox Grid.Column="0" Background="Black" Width="100" Height="120" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,5,5">
            
        </ListBox>
        
        <Image Name="Screen" Margin="5,0,10,0"/>

        <Grid Grid.Column="1">
            
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="150"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Background="Bisque">
                
            </StackPanel>

            <StackPanel Grid.Row="1" Background="Beige">
                <TextBlock TextAlignment="Center" FontWeight="Bold">
                    Render options
                </TextBlock>
                <CheckBox>Draw faces</CheckBox>
                <CheckBox>Backface culling</CheckBox>
                <CheckBox>World space transformations</CheckBox>
                <CheckBox>Draw icons</CheckBox>
                
            </StackPanel>
        </Grid>
    </Grid>
</Window>
